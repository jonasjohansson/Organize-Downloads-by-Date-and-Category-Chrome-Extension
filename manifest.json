{
    "name": "Organize Downloads by Date and Category",
    "description": "Automatically organizes downloads into folders by category and date. Customizable folder structure.",
    "version": "1.2.1",
    "permissions": [
        "downloads",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "manifest_version": 3
}
